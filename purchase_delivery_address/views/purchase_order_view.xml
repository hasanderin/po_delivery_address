<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_inherit_delivery_address" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.delivery.address</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_order']" position="before">
                <field name="delivery_address_id" context="{'show_address': 1}" options="{'always_reload': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
